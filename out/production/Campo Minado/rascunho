            OPÇÕES DIFICULDADE
    System.out.println("Bem-vindo ao Campo Minado!");
    System.out.println("Selecione a dificuldade que deseja jogar:");
    System.out.println("1. Fácil (8x8)");
    System.out.println("2. Médio (16x16)");
    System.out.println("3. Difícil (32x32)");
    opt = sc.nextInt();

    switch (opt){
        case 1:
    Tabela tab = new Tabela(8, 8);
    tab.colocarBombas();
        case 2:
    Tabela tab = new Tabela(16, 16);
    tab.colocarBombas();
        case 3:
    Tabela tab = new Tabela(32, 32);
    tab.colocarBombas();
    }

            REVELAR TUDO
    public void revelarTudo(){
        for (int i = 0; i < tabela.length; i++){
            for (int j = 0; j < tabela[i].length; j++){
                tabela[i][j].reveal = true;
    } } }

